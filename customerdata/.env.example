# Database configuration
DB_HOST=your_db_host            # เช่น localhost หรือ IP address ของ database server
DB_PORT=your_db_port            # ค่าเริ่มต้นสำหรับ MySQL คือ 3306
DB_USERNAME=your_db_username    # ชื่อผู้ใช้สำหรับเชื่อมต่อฐานข้อมูล
DB_PASSWORD=your_db_password    # รหัสผ่านสำหรับเชื่อมต่อฐานข้อมูล
DB_NAME=your_db_name            # ชื่อฐานข้อมูล 

# Application secret key
SECRET_KEY=your_secret_key      # ใช้สำหรับการเข้ารหัสและยืนยันความปลอดภัย เช่น JWT หรือ session

# Email configuration
EMAIL=your_email                # อีเมลที่จะใช้ส่งข้อความ เช่น noreply@example.com
EMAIL_PASS=your_email_password  # รหัสผ่านสำหรับอีเมล (ใช้ Gmail ควรตั้งค่า app-specific password ครับ)

# Dropbox API configuration
DROPBOX_KEY=your_dropbox_key    # Generated access tokey ของ dropbox สำหรับเชื่อมต่อ Dropbox
DROPBOX_SECRET=your_dropbox_secret  # (ไม่จำเป็นในบางกรณี)

# หมายเหตุ: กรุณาแทนที่ "your_..." ด้วยค่าที่เหมาะสมสำหรับการทดสอบ
# หากตั้งค่าไม่ครบ อาจจะทำให้ไม่สามารถทำงานได้

